<div class="container">
  <div class="row">
    <div class="col">
      <div data-controller="search-movies">
        <h1 class="h2 my-3 d-flex justify-content-center" data-search-movies-target='header'>
          Movies to watch üçø
        </h1>
        <%# <div data-search-movies-target="input"> %>
        <%# <div data-action="keyup->search-movies#update"> %>
        <%= form_with url: movies_path, method: :get, html: { class: 'mb-4', data: { search_movies_target: 'form' } } do |f| %>
          <%= f.text_field :query,
                           class: "form-control",
                           placeholder: 'Type a movie title',
                           value: params[:query],
                           data: {
                             search_movies_target: "input",
                             action: "keyup->search-movies#update"
                            }
                           %>
        <% end %>
        <%= render 'list', movies: @movies %>
      </div>
    </div>
  </div>
</div>
